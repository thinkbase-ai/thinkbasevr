@page
@model Darl.GraphQL.Pages.noda2Model
@{
    ViewData["Title"] = "Noda interaction";
    Layout = "~/Pages/_nodaLayout.cshtml";
}

@section StyleSheets
{
    <bundle name="wwwroot/bundles/vr.min.css" />
    <link rel="stylesheet" href="/GraphEdit/GraphEdit.css" />

}

@section Scripts
{
    <script src="https://noda.io/api/includes/noda.js"></script>
    <script src="~/Noda/nodaint.js"></script>
    <script src="~/json-editor/jsoneditor.js"></script>

}

<main role="main">
<div class="row">
    <div class="col-sm-10 ml-3" >
        <h3>ThinkBase Noda Demo</h3>
    </div>
    <div class="col-sm-1 ml-3" >
        <button id="View-Edit" class="btn btn-info">Edit</button>
    </div>
</div>
<hr/>
<div class="container-fluid" style="min-height:100vh" id="ViewContainer">
    <div class="row">
        <div class="col-sm-6">
            <div class="row ml-2">
                <h3>Graph selection</h3>
            </div>
            <div class="row ml-2">
                Select a Knowledge Graph to view and interact with.
            </div>
            <div>&nbsp;</div>
            <div class="row ml-2">
                <select id="kgmodel-dropdown" name="kgmodel-dropdown" class="dropdown">
                    <option selected="true" disabled>Choose...</option>
                    <option value="personality_test.graph">Personality test</option>
                    <option value="ai_triage.graph">Advice implementing AI</option>
                </select>
            </div>
            <div>&nbsp;</div>
            <div class="row ml-2">
                <button id="kg-build" class="btn btn-info">Build</button>
                <button id="kg-clear" class="btn btn-info">Clear</button>
                <button id="kg-reset" class="btn btn-info">Reset conversation</button>
            </div>
            <div class="row ml-2">
                <h3>Graph description</h3>
            </div>
            <div class="row ml-2">
                <div id="kg-description">

                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <h3>Conversation</h3>
            <div class="mesgs">
                <div class="msg_history">
                </div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <input type="text" id="msg_input" class="write_msg" placeholder="Type a message" />
                        <button class="msg_send_btn" id="msg_send_btn" type="button"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid d-none" style="min-height:100vh" id="EditContainer">
    <div class="row">
        <div class="col-sm-6">
            <div class="row ml-2">
                <h3>Sub-graph selection</h3>
            </div>
            <div class="row ml-2">
                <label><input type="radio" name="network" value="Real" checked />Real </label>
                &nbsp;
                <label><input type="radio" name="network" value="Virtual" />Virtual </label>
                &nbsp;
                <label><input type="radio" name="network" value="Recognition" />Recognition </label>
            </div>            
        </div>
        <div class="col-sm-6">
            <div class="row ml-2">
                <h3>Selected node's properties and attributes</h3>
            </div>
            <div id="nodeEditor" class="row ml-2" >

            </div>
        </div>
    </div>
</div>
</main>